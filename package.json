{
  "name": "@justlep/camo",
  "version": "1.0.0-beta.2",
  "description": "A class-based Object-Document Mapper (ODM) for NeDB",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "mocha --reporter spec --timeout 10000 test/",
    "test:memory-nedb-original": "npm --NEDB_VERSION=original run test",
    "test:memory-nedb-justlep": "npm --NEDB_VERSION=justlep run test",
    "test:persistent-nedb-original": "npm --NEDB_VERSION=original --NEDB_PERSISTENT=true run test",
    "test:persistent-nedb-justlep": "npm --NEDB_VERSION=justlep --NEDB_PERSISTENT=true run test",
    "lint": "eslint --max-warnings 5 --ext js index.js lib/**/*.js test/**/*.js"
  },
  "author": "Lennart Pegel <github@justlep.net>",
  "contributors": [
    {
      "name": "Scott Robinson",
      "email": "s.w.robinson@gmail.com",
      "url": "https://github.com/scottwrobinson/camo"
    }
  ],
  "keywords": [
    "es6",
    "odm",
    "nedb",
    "nosql",
    "document",
    "model",
    "schema",
    "database",
    "data",
    "datastore",
    "query",
    "db"
  ],
  "homepage": "https://github.com/justlep/camo",
  "repository": {
    "type": "git",
    "url": "https://github.com/justlep/camo.git"
  },
  "license": "MIT",
  "dependencies": {
    "depd": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "eslint": "^8.15.0",
    "eslint-plugin-log-filenames": "^1.0.5",
    "mocha": "^10.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
